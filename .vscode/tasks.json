{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2: One-click TB3+Nav2+RViz (Debug stack)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/oneclick_tb3_nav2_rviz_debug.sh jazzy waffle_pi"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "ros2-oneclick",
                    "pattern": {
                        "regexp": "^(.*)$",
                        "message": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\[tb3_oneclick\\]\\[START\\]",
                        "endsPattern": "^\\[tb3_oneclick\\]\\[READY\\]"
                    }
                }
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-nav2",
                "clear": true
            }
        },
        {
            "label": "ROS2: Build (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && colcon build --symlink-install --packages-select ros2_learning_cpp ros2_learning_nav2_client ros2_learning_turtlebot3_teleop --cmake-force-configure --cmake-args -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ROS2: Build (RelWithDebInfo)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && colcon build --symlink-install --packages-select ros2_learning_cpp ros2_learning_nav2_client --cmake-force-configure --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo -DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "ROS2: Run talker (integrated terminal)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && ros2 run ros2_learning_cpp talker"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-demo",
                "clear": true
            }
        },
        {
            "label": "ROS2: Run listener (integrated terminal)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && ros2 run ros2_learning_cpp listener"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-demo",
                "clear": true
            }
        },
        {
            "label": "ROS2: Run nav2_client (integrated terminal)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && ros2 run ros2_learning_nav2_client nav2_client"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-nav2",
                "clear": true
            }
        }
    ]
}