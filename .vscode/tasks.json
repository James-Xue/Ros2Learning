{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2: One-click TB3+Nav2+RViz (Debug stack)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/oneclick_tb3_nav2_rviz_debug.sh jazzy waffle_pi"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "ros2-oneclick",
                    "pattern": {
                        "regexp": "^(.*)$",
                        "message": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\[tb3_oneclick\\]\\[START\\]",
                        "endsPattern": "^\\[tb3_oneclick\\]\\[READY\\]"
                    }
                }
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-nav2",
                "clear": true
            }
        },
        {
            "label": "ROS2: Build (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && colcon build --symlink-install --packages-select ros2_learning_cpp ros2_learning_nav2_client ros2_learning_turtlebot3_teleop ros2_learning_task_runner ros2_learning_sysinfo_publisher ros2_learning_tb3_spawner ros2_learning_turtlesim_go_to --cmake-force-configure --cmake-args -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ROS2: Export env (jazzy)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && mkdir -p '${workspaceFolder}/.vscode' && env > '${workspaceFolder}/.vscode/ros2_jazzy.env'"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "ROS2: Build (Debug)"
            ]
        },
        {
            "label": "ROS2: Generate gdb source map (jazzy)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/gen_gdb_source_map.sh jazzy"
            ],
            "problemMatcher": []
        },
        {
            "label": "ROS2: Fetch rclcpp sources (jazzy)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/setup_rclcpp_source.sh jazzy"
            ],
            "problemMatcher": []
        },
        {
            "label": "ROS2: Fetch rcutils sources (jazzy)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/setup_rcutils_source.sh jazzy"
            ],
            "problemMatcher": []
        },
        {
            "label": "ROS2: Install ROS2 dbgsym (jazzy, sudo)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/setup_ros2_dbgsym.sh jazzy"
            ],
            "problemMatcher": []
        },
        {
            "label": "ROS2: Install ROS2 dbgsym (jazzy, sudo, all)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}' && ./ros2_ws/scripts/setup_ros2_dbgsym.sh jazzy --all"
            ],
            "problemMatcher": []
        },
        {
            "label": "ROS2: Prepare debug (jazzy)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "true"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "ROS2: Build (Debug)",
                "ROS2: Fetch rclcpp sources (jazzy)",
                "ROS2: Fetch rcutils sources (jazzy)",
                "ROS2: Export env (jazzy)",
                "ROS2: Generate gdb source map (jazzy)"
            ]
        },
        {
            "label": "ROS2: Prepare nav2 debug (jazzy)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "true"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "ROS2: Build (Debug)",
                "ROS2: Export env (jazzy)",
                "ROS2: Generate gdb source map (jazzy)",
                "ROS2: One-click TB3+Nav2+RViz (Debug stack)"
            ]
        },
        {
            "label": "ROS2: Build (RelWithDebInfo)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && colcon build --symlink-install --packages-select ros2_learning_cpp ros2_learning_nav2_client ros2_learning_task_runner ros2_learning_sysinfo_publisher ros2_learning_tb3_spawner ros2_learning_turtlesim_go_to --cmake-force-configure --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo -DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
