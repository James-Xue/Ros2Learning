            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-demo",
                "clear": true
            }
        },
        {
            "label": "ROS2: Run listener (integrated terminal)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && ros2 run ros2_learning_cpp listener"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "ros2-demo",
                "clear": true
            }
        },
        {
            "label": "ROS2: Run nav2_client (integrated terminal)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && ros2 run ros2_learning_nav2_client nav2_client"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
