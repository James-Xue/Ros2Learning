                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable debuginfod (auto-fetch debug symbols if available)",
                    "text": "-gdb-set debuginfod enabled on",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ROS2: Debug teleop_keyboard (Debug build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && exec '${workspaceFolder}/ros2_ws/install/ros2_learning_turtlebot3_teleop/lib/ros2_learning_turtlebot3_teleop/teleop_keyboard'"
