{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "ROS2: Attach talker + listener (ros2_learning_cpp)",
            "configurations": [
                "ROS2: Attach talker (ros2_learning_cpp)",
                "ROS2: Attach listener (ros2_learning_cpp)"
            ]
        }
    ],
    "configurations": [
        {
            "name": "ROS2: Debug talker (Debug build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && exec '${workspaceFolder}/ros2_ws/install/ros2_learning_cpp/lib/ros2_learning_cpp/talker'"
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}/ros2_ws",
            "externalConsole": false,
            "justMyCode": false,
            "sourceFileMap": {
                "/usr/src/ros-jazzy-rclcpp-": "${workspaceFolder}/third_party/rclcpp_repo/rclcpp"
            },
            "preLaunchTask": "ROS2: Build (Debug)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable debuginfod (auto-fetch debug symbols if available)",
                    "text": "-gdb-set debuginfod enabled on",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ROS2: Debug nav2_client (Debug build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && exec '${workspaceFolder}/ros2_ws/install/ros2_learning_cpp/lib/ros2_learning_cpp/nav2_client'"
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}/ros2_ws",
            "externalConsole": false,
            "justMyCode": false,
            "sourceFileMap": {
                "/usr/src/ros-jazzy-rclcpp-": "${workspaceFolder}/third_party/rclcpp_repo/rclcpp"
            },
            "preLaunchTask": "ROS2: One-click TB3+Nav2+RViz (Debug stack)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Breakpoint: Nav2Client::run",
                    "text": "-break-insert -f Nav2Client::run",
                    "ignoreFailures": true
                },
                {
                    "description": "Breakpoint: Nav2Client::wait_for_server",
                    "text": "-break-insert -f Nav2Client::wait_for_server",
                    "ignoreFailures": true
                },
                {
                    "description": "Breakpoint: Nav2Client::publish_initial_pose",
                    "text": "-break-insert -f Nav2Client::publish_initial_pose",
                    "ignoreFailures": true
                },
                {
                    "description": "Breakpoint: Nav2Client::send_goal",
                    "text": "-break-insert -f Nav2Client::send_goal",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable debuginfod (auto-fetch debug symbols if available)",
                    "text": "-gdb-set debuginfod enabled on",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ROS2: Debug listener (Debug build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": [
                "-lc",
                "cd '${workspaceFolder}/ros2_ws' && source ./scripts/source.sh jazzy && exec '${workspaceFolder}/ros2_ws/install/ros2_learning_cpp/lib/ros2_learning_cpp/listener'"
